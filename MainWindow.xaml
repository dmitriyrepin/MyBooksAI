<Window x:Class="AudioBookViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AudioBookViewer"
        Title="Audio Book Collection" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:AuthorToColorConverter x:Key="AuthorToColorConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: List of Titles -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Audio Books" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Combined Search and Filter Toolbar (Mutually Exclusive) -->
            <ToolBar Grid.Row="1" Margin="0,0,0,10" Background="Transparent">
                <ToolBar.Resources>
                    <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="3"
                                            Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Border x:Name="IconBackground" 
                                                    Background="LightGray"
                                                    CornerRadius="2"
                                                    Padding="3,1">
                                                <TextBlock Text="≈" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          VerticalAlignment="Center"
                                                          Foreground="White"/>
                                            </Border>
                                            <ContentPresenter VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="IconBackground" Property="Background" Value="LimeGreen"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToolBar.Resources>
                
                <Image Source="filter-icon.png" Width="20" Height="20" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <TextBlock Text="Filter:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ToggleButton x:Name="SameAuthorToggle" 
                              Content="Author" 
                              Style="{StaticResource FilterToggleButtonStyle}"
                              Click="SameAuthorToggle_Click"
                              IsEnabled="False"/>
                <ToggleButton x:Name="SameSeriesToggle" 
                              Content="Series" 
                              Style="{StaticResource FilterToggleButtonStyle}"
                              Margin="5,0,0,0"
                              Click="SameSeriesToggle_Click"
                              IsEnabled="False"/>
                <ToggleButton x:Name="SameNarratorToggle" 
                              Content="Narrator" 
                              Style="{StaticResource FilterToggleButtonStyle}"
                              Margin="5,0,0,0"
                              Click="SameNarratorToggle_Click"
                              IsEnabled="False"/>
                <ComboBox x:Name="ProgressFilterComboBox"
                          Width="100"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"
                          SelectionChanged="ProgressFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Progress" IsSelected="True"/>
                    <ComboBoxItem Content="New"/>
                    <ComboBoxItem Content="Reading"/>
                    <ComboBoxItem Content="Finished"/>
                    <ComboBoxItem Content="Multiread"/>
                </ComboBox>
                <Border x:Name="SearchIconBackground" 
                        Background="LightGray"
                        CornerRadius="2"
                        Padding="3,1"
                        VerticalAlignment="Center"
                        Margin="10,0,5,0"
                        Cursor="Hand"
                        MouseDown="SearchIcon_MouseDown">
                    <TextBlock Text="≈" 
                              FontSize="16" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Foreground="White"/>
                </Border>
                <TextBox x:Name="SearchBox" 
                         Width="250"
                         Padding="5" 
                         VerticalAlignment="Center"
                         TextChanged="SearchBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Search by title or author..." 
                                                              Foreground="LightGray" 
                                                              Margin="5,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </ToolBar>

            <DataGrid Grid.Row="2" x:Name="BookListBox" 
                      SelectionChanged="BookListBox_SelectionChanged"
                      Sorting="BookListBox_Sorting"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      SelectionUnit="FullRow"
                      RowHeight="52">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background">
                            <Setter.Value>
                                <Binding Path="Author" Converter="{StaticResource AuthorToColorConverter}"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <Binding Path="Author" Converter="{StaticResource AuthorToColorConverter}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Cover" Width="45" CanUserSort="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image MaxWidth="40" Height="48" Stretch="Uniform">
                                    <Image.Source>
                                        <Binding Path="Cover">
                                            <Binding.TargetNullValue>
                                                <x:Null/>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="150" SortMemberPath="Author"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" SortMemberPath="Title"/>
                    <DataGridTextColumn Header="Series" Binding="{Binding Series}" Width="180" SortMemberPath="Series"/>
                    <DataGridTextColumn Header="Book #" Binding="{Binding BookNumber}" Width="70" SortMemberPath="BookNumber"/>
                    <DataGridTextColumn Header="Narrator" Binding="{Binding Narrator}" Width="150" SortMemberPath="Narrator"/>
                    <DataGridTextColumn Header="Stars" Binding="{Binding Rating}" Width="60" SortMemberPath="Rating"/>
                    <DataGridTextColumn Header="Ratings" Binding="{Binding Ratings}" Width="70" SortMemberPath="Ratings"/>
                    <DataGridTextColumn Header="Progress" Binding="{Binding Progress}" Width="80" SortMemberPath="Progress"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- Right Panel: Book Details -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Book Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid x:Name="DetailsPanel" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Cover Image -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Cover:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <Image Grid.Row="0" Grid.Column="1" x:Name="CoverImage" MaxWidth="300" MaxHeight="400" Margin="0,5,0,15" Stretch="Uniform" HorizontalAlignment="Left"/>

                        <!-- Title -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Title:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TitleText" Text="" TextWrapping="Wrap" FontSize="16" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Title Short -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Title Short:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TitleShortText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Author -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Author:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="AuthorText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Narrator -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Narrator:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="NarratorText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Series -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Series:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="SeriesText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Book Number -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Book Number:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="BookNumberText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Subtitle -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Subtitle:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="7" Grid.Column="1" x:Name="SubtitleText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Blurb -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Blurb:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="8" Grid.Column="1" x:Name="BlurbText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Summary -->
                        <TextBlock Grid.Row="9" Grid.Column="0" Text="Summary:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <WebBrowser Grid.Row="9" Grid.Column="1" x:Name="SummaryBrowser" Height="200" Margin="0,5,0,5"/>

                        <!-- Length -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Text="Length:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="10" Grid.Column="1" x:Name="LengthText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Progress -->
                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Progress:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="11" Grid.Column="1" x:Name="ProgressText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Release Date -->
                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Release Date:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="12" Grid.Column="1" x:Name="ReleaseDateText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Publishers -->
                        <TextBlock Grid.Row="13" Grid.Column="0" Text="Publishers:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="13" Grid.Column="1" x:Name="PublishersText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Rating -->
                        <TextBlock Grid.Row="14" Grid.Column="0" Text="Rating:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="14" Grid.Column="1" x:Name="RatingText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Ratings -->
                        <TextBlock Grid.Row="15" Grid.Column="0" Text="Ratings:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="15" Grid.Column="1" x:Name="RatingsText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- My Rating -->
                        <TextBlock Grid.Row="16" Grid.Column="0" Text="My Rating:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="16" Grid.Column="1" x:Name="MyRatingText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Favorite -->
                        <TextBlock Grid.Row="17" Grid.Column="0" Text="Favorite:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="17" Grid.Column="1" x:Name="FavoriteText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Categories -->
                        <TextBlock Grid.Row="18" Grid.Column="0" Text="Categories:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="18" Grid.Column="1" x:Name="CategoriesText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Parent Category -->
                        <TextBlock Grid.Row="19" Grid.Column="0" Text="Parent Category:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="19" Grid.Column="1" x:Name="ParentCategoryText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Child Category -->
                        <TextBlock Grid.Row="20" Grid.Column="0" Text="Child Category:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="20" Grid.Column="1" x:Name="ChildCategoryText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Tags -->
                        <TextBlock Grid.Row="21" Grid.Column="0" Text="Tags:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="21" Grid.Column="1" x:Name="TagsText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Format -->
                        <TextBlock Grid.Row="22" Grid.Column="0" Text="Format:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="22" Grid.Column="1" x:Name="FormatText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Language -->
                        <TextBlock Grid.Row="23" Grid.Column="0" Text="Language:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="23" Grid.Column="1" x:Name="LanguageText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- ASIN -->
                        <TextBlock Grid.Row="24" Grid.Column="0" Text="ASIN:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="24" Grid.Column="1" x:Name="ASINText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- ISBN10 -->
                        <TextBlock Grid.Row="25" Grid.Column="0" Text="ISBN10:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="25" Grid.Column="1" x:Name="ISBN10Text" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- ISBN13 -->
                        <TextBlock Grid.Row="26" Grid.Column="0" Text="ISBN13:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="26" Grid.Column="1" x:Name="ISBN13Text" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Store Page URL -->
                        <TextBlock Grid.Row="27" Grid.Column="0" Text="Store Page URL:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="27" Grid.Column="1" x:Name="StorePageUrlText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Search In Goodreads -->
                        <TextBlock Grid.Row="28" Grid.Column="0" Text="Goodreads:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="28" Grid.Column="1" x:Name="SearchInGoodreadsText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>

                        <!-- Collection IDs -->
                        <TextBlock Grid.Row="29" Grid.Column="0" Text="Collection IDs:" FontWeight="Bold" Foreground="DarkBlue" Margin="0,5,10,5" VerticalAlignment="Top"/>
                        <TextBox Grid.Row="29" Grid.Column="1" x:Name="CollectionIdsText" Text="" TextWrapping="Wrap" Margin="0,5,0,5" IsReadOnly="True" BorderThickness="0" Background="Transparent"/>
                    </Grid>

                    <!-- Placeholder when no selection -->
                    <TextBlock x:Name="NoSelectionText" 
                              Text="Select an audio book from the list to view details" 
                              FontStyle="Italic" 
                              Foreground="Gray" 
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              Margin="20"/>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

